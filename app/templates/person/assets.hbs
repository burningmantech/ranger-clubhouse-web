<YearSelect @title="Asset History"
            @year={{this.year}}
            @years={{this.person.all_years}}
            @subheader={{true}}
            @onChange={{set-value this 'year'}} />

{{#if (is-current-year this.year)}}
  {{#unless this.personEvent.asset_authorized}}
    <UiNotice @title="{{this.person.callsign}} Not Asset Authorized" @type="danger" @icon="exclamation">
      The person may not check out equipment at this time. Have them sign the appropriate paperwork.
    </UiNotice>
  {{/unless}}

  <UiSection>
    <:title>Asset Checkout</:title>
    <:body>
      <AssetCheckoutForm @person={{this.person}}
                         @assets={{this.assets}}
                         @attachments={{this.attachments}}
                         @eventInfo={{this.eventInfo}} />
    </:body>
  </UiSection>
{{/if}}

<UiSection>
  <:title>Asset Check In/Out History</:title>
  <:body>
    <AssetTable @assets={{this.assets}} @year={{this.year}} />
  </:body>
</UiSection>

