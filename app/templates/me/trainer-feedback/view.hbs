<LinkTo @route="me.trainer-feedback.index">Back to Trainer Surveys</LinkTo>

{{#each this.surveys as |survey|}}
  <UiAccordion as |Accordion|>
    <Accordion.title>{{survey.title}}</Accordion.title>
    <Accordion.body>
      {{#each survey.reports as |report|}}
        {{#each report.summarized_ratings as |summary|}}
          <SurveyRatingSummaryReport @report={{report}} @summary={{summary}} />
        {{/each}}

        {{#if (eq report.type "trainer")}}
          {{#each report.trainers as |trainer|}}
            {{#each trainer.questions as |question|}}
              <SurveyQuestionReport @report={{report}} @trainer={{trainer}} @question={{question}} />
            {{/each}}
          {{/each}}
        {{else}}
          {{#each report.questions as |question|}}
            <SurveyQuestionReport @report={{report}} @question={{question}} />
          {{/each}}
        {{/if}}
      {{/each}}
    </Accordion.body>
  </UiAccordion>
{{/each}}
