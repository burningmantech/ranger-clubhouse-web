<Popover @text={{@text}} @arrowDown={{true}} @placement="bottom" ...attributes>
  <div class="p-2">
    <a href class="d-block mb-2" {{on "click" this.clearAll}} >
      Uncheck all
    </a>
    {{#each this.checkedBoxes as |option idx|}}
      <div class="form-check">
        <input class="form-check-input"
               type="checkbox"
               checked={{option.isChecked}}
               id="{{@name}}-{{idx}}"
          {{on "click" (fn this.clickOption option)}}
        />
        <label class="form-check-label" for="{{@name}}-{{idx}}">
          {{option.label}}
        </label>
      </div>
    {{/each}}
  </div>
</Popover>
