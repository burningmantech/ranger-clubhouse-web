<select name={{@name}}
        class={{this.controlClass}}
        size={{@size}}
        multiple={{@multiple}}
        disabled={{@disabled}}
  {{on "change" this.changeEvent}}>
  {{~#if @includeBlank~}}
    <option value="" selected={{is-empty @value}}>-</option>
  {{~/if~}}
  {{#each this.selectOptions as |opt|~}}
    {{#if opt.groupName}}
      <optgroup label={{opt.groupName}}>
        {{~#each opt.options as |groupOpt|~}}
          <option value={{groupOpt.value}}
                  selected={{this.hasValue @value groupOpt.value}}
                  disabled={{groupOpt.disabled}}>{{groupOpt.label}}</option>
        {{~/each~}}
      </optgroup>
      {{~else~}}
      <option value={{opt.value}} selected={{this.hasValue @value opt.value}}
              disabled={{opt.disabled}}>{{opt.label}}</option>
    {{~/if}}
  {{~/each~}}
</select>
