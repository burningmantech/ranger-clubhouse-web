<NavbarMenu @nav={{@nav}} @title="Vol Coord" @isLarge={{true}} as |menu|>
  {{#if (has-role "vc")}}
    <NavbarMenuSection @section="General">
      <NavbarMenuItem @menu={{menu}} @route="vc.handle-checker" @item="Check Callsigns"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.spigot" @item="Spigot Flow"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.shiny-penny-report" @item="Shiny Penny Report"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.maintenance" @item="VC Maintenance"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.handle-reservations" @item="Handle Reservations"/>
      {{#if (has-role "intake")}}
        <NavbarMenuItem @menu={{menu}} @route="vc.unified-flagging" @item="Unified Flagging"/>
      {{/if}}
    </NavbarMenuSection>
    <NavbarMenuSection @section="Photos">
      <NavbarMenuItem @menu={{menu}} @route="vc.photo-review" @item="Photo Review"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.photos" @item="Photos"/>
    </NavbarMenuSection>
    <NavbarMenuSection @section="Applications">
      <NavbarMenuItem @menu={{menu}} @route="vc.applications" @item="Prospective Applications"/>
      {{#if (has-role "admin" "salesforce-import")}}
        <NavbarMenuItem @menu={{menu}} @route="vc.application-import" @item="Application Import"/>
        <NavbarMenuItem @menu={{menu}} @route="vc.create-prospectives" @item="Create Prospectives"/>
      {{/if}}
    </NavbarMenuSection>
  {{/if}}
  {{#if (has-role "edit-access-docs")}}
    <NavbarMenuSection @section="Ticketing">
      <NavbarMenuItem @menu={{menu}} @route="vc.access-documents.index" @item="Manage Access Docs"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.access-documents.reports" @item="Reports"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.access-documents.trs" @item="Export Documents"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.access-documents.maintenance" @item="Ticketing/Provision Maintenance"/>
    </NavbarMenuSection>
  {{/if}}
  {{#if (has-role "edit-bmids")}}
    <NavbarMenuSection @section="BMIDs">
      <NavbarMenuItem @menu={{menu}} @route="vc.bmid" @item="Manage BMIDs"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.bmid-sanity-check" @item="BMID Sanity Checker"/>
      <NavbarMenuItem @menu={{menu}} @route="vc.bmid-print" @item="Export To Marcato"/>
    </NavbarMenuSection>
  {{/if}}
</NavbarMenu>
