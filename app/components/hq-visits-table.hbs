<UiSection>
  <:title>{{@title}}</:title>
  <:body>
    <UiTable>
      <thead>
      <tr>
        <th>Time ({{@interval}} min interval)</th>
        <th class="text-end">Check In</th>
        <th class="text-end">Check Out</th>
        <th class="text-end">Windows</th>
        <th class="text-end">Runners</th>
        <th class="text-end">Shorts</th>
        <th class="text-end">Leads</th>
      </tr>
      </thead>
      <tbody>
      {{#each @visits key="period" as |visit|}}
        <tr class="{{if (and (not visit.windows) (not visit.shorts) (not visit.leads)) "text-bg-highlight"}}">
          <td>
            {{if (and (not visit.windows) (not visit.shorts) (not visit.leads)) (fa-icon "exclamation-triangle")}}
            {{shift-format visit.period}}
          </td>
          <td class="text-end">{{visit.checkin}}</td>
          <td class="text-end">{{visit.checkout}}</td>
          <td class="text-end">{{visit.windows}}</td>
          <td class="text-end">{{visit.runners}}</td>
          <td class="text-end">{{visit.shorts}}</td>
          <td class="text-end">{{visit.leads}}</td>
        </tr>
      {{/each}}
      </tbody>
    </UiTable>
  </:body>
</UiSection>