<NavbarMenu @nav={{@nav}} @title="Reports" @isLarge={{true}} as |menu|>
  <NavbarMenuSection @section="Schedule">
    <NavbarMenuItem @menu={{menu}} @route="reports.shift-lead" @item="Shift Lead Report"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.schedule-by-callsign" @item="Schedule by Callsign"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.schedule-by-position" @item="Schedule by Position"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.shift-coverage" @item="Coverage Report"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.shift-signups" @item="Shift Signups"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.hq-forecast" @item="HQ Checkin/Out Forecast"/>
  </NavbarMenuSection>
  <NavbarMenuSection @section="People">
    <NavbarMenuItem @menu={{menu}} @route="reports.people-by-position" @item="People by Position"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.people-by-permissions" @item="People by Permissions"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.people-by-status" @item="People By Status"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.people-by-location" @item="People by Location"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.special-teams" @item="People By Special Teams"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.people-by-clubhouse-teams" @item="People By Clubhouse Teams"/>
  </NavbarMenuSection>
  <NavbarMenuSection @section="Timesheets">
    <NavbarMenuItem @menu={{menu}} @route="reports.on-duty" @query={{hash over_hours=null}} @item="People On Duty"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.on-duty" @query={{hash over_hours=6}} @item="... Over 6 Hours"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.flakes" @item="Flake Report"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.shift-drop" @item="Shift Drop"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.forced-signins" @item="Forced Sign-Ins"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.timesheet-totals" @item="Timesheet Totals"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.timesheet-by-callsign" @item="Timesheet By Callsign"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.timesheet-by-position" @item="Timesheet By Position"/>
  </NavbarMenuSection>
  {{#if (has-role "admin" "timesheet-management")}}
  <NavbarMenuSection @section="Timesheet Corrections">
      <NavbarMenuItem @menu={{menu}} @route="reports.timesheet-correction-requests" @item="Corrections Requests"/>
      <NavbarMenuItem @menu={{menu}} @route="reports.timesheet-unconfirmed" @item="Timesheet Unconfirmed"/>
      <NavbarMenuItem @menu={{menu}} @route="admin.timesheet-sanity-checker" @item="Timesheet Sanity Checker"/>
      <NavbarMenuItem @menu={{menu}} @route="reports.timesheet-correction-stats" @item="Correction Statistics"/>
  </NavbarMenuSection>
  {{/if}}
  <NavbarMenuSection @section="Assets">
    <NavbarMenuItem @menu={{menu}} @route="reports.assets-outstanding" @item="Assets Outstanding"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.asset-history" @item="Non-Radio Asset History"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.radio-assets" @item="Radio Assets"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.radio-checkout" @item="Radio Checkout Report"/>
  </NavbarMenuSection>
  <NavbarMenuSection @section="Quartermaster">
    <NavbarMenuItem @menu={{menu}} @route="reports.alpha-shirts" @item="Alpha Shirts"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.freaking-years" @item="Freaking Years"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.potential-shirts" @item="Potential Earned Shirts"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.potential-swag" @item="Potential Swag"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.swag-distribution" @item="Swag Distribution"/>
  </NavbarMenuSection>
  <NavbarMenuSection @section="Vehicles">
    <NavbarMenuItem @menu={{menu}} @route="reports.vehicle-paperwork" @item="Vehicle Paperwork"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.vehicle-registry" @item="Vehicle Registry"/>
  </NavbarMenuSection>
  <NavbarMenuSection @section="Other">
    <NavbarMenuItem @menu={{menu}} @route="reports.certifications" @item="Certifications"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.cruise-direction" @item="Cruise Direction"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.event-stats" @item="Event Stats"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.languages" @item="Languages"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.position-sanity-checker" @item="Position Sanity Check"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.rollcall" @item="Rollcall"/>
    <NavbarMenuItem @menu={{menu}} @route="reports.sandman-qualified" @item="Sandman Qualified"/>
  </NavbarMenuSection>
</NavbarMenu>
