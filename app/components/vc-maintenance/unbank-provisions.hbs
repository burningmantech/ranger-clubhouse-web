{{#if @results.provisions}}
  <p>
    {{pluralize @results.provisions.length "provision"}} un-banked.
  </p>

  <table class="table table-striped table-hover table-width-auto">
    <thead>
    <tr>
      <th>RP</th>
      <th>Type</th>
      <th>Status</th>
      <th>Person</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
    {{#each @results.provisions as |ad|}}
      <tr>
        <td>
          <PersonLink @personId={{ad.person.id}} @page="tickets-provisions" @callsign="RP-{{ad.id}}"/>
        </td>
        <td>{{this.typeLabel ad.type}}</td>
        <td>{{ad.status}}</td>
        <td>
          <PersonLink @person={{ad.person}} />
        </td>
        <td>{{ad.person.status}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
{{else}}
  <p class="text-danger">
    <b>No provisions were found that need to be un-banked.</b>
  </p>
{{/if}}
