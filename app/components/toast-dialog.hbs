<div class="toast show align-items-center text-white bg-{{@toast.type}} border-0"
     role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      <span class="me-2">{{fa-icon this.iconName}}</span>
      {{this.message}}
      {{#if this.isDangerType}}
        <div class="mt-2 pt-2 border-top">
          <button type="button" class="btn btn-primary btn-sm" {{action this.closeAction}}>Close</button>
        </div>
      {{/if}}
    </div>
    {{#unless this.isDangerType}}
      <button type="button"
              class="btn-close btn-close-white me-2 m-auto"
              {{action this.closeAction}}
              aria-label="Close"></button>
    {{/unless}}
  </div>
</div>
