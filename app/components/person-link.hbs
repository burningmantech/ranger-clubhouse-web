{{#if @person~}}
  <LinkTo @route={{this.routePath}} @model={{@person.id}} @query={{hash year=@year}} ...attributes>{{@person.callsign}}</LinkTo>
{{~else~}}
  <LinkTo @route={{this.routePath}} @model={{@personId}} @query={{hash year=@year}} ...attributes>{{@callsign}}</LinkTo>
{{~/if~}}
{{#if @showStatus}}
  &lt;{{@person.status}}&gt;
{{/if}}
