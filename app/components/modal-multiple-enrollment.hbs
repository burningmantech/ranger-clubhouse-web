<ModalDialog @title="Already Signed Up" @isInline={{@isInline}} as |modal|>
  <modal.body>
    <p>
      Only one {{#if this.isAlpha}}Alpha shift{{else}}{{this.trainingType}} session{{/if}} may be signed up for.
      <YouOrCallsign @person={{this.person}} @youLabel="You are" @callsignVerb="is"/>
      already signed up for the following:
    </p>
    <p>
      {{#each this.enrolledSlots as |slot|}}
        <b>{{slot.position.title}} - {{slot.description}} {{shift-format slot.begins}}</b><br>
      {{/each}}
    </p>
    <p>
      If the above {{this.shiftType}} has not started, the sign-up may be removed, and the new one added.
    </p>
    <p>
      {{#if this.isTraining}}
        To arrange another In-Person Training sign-up if the previous sign-up cannot be removed, or if you did not pass the
        previous session, email the Training Academy to get your situation sorted out:<br>
        <TrainingAcademyEmail />
      {{else}}
        To arrange another sign up (if the previous one cannot be removed) or if you have questions, email
        {{#if this.slot.position.contact_email}}
          <MailTo @to={{this.slot.position.contact_email}} />
        {{else}}
          <VcEmail />
        {{/if}}
      {{/if}}
    </p>
  </modal.body>
  <modal.footer>
    <UiCloseButton @onClick={{@onClose}} />
  </modal.footer>
</ModalDialog>
