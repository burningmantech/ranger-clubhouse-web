    <ChForm::Select @name="year"
                    @value={{@year}}
                    @options={{this.yearOptions}}
                    @onChange={{@onChange}}
                    @controlClass=""/>
    {{@title}}
  </div>
{{else}}
  <h1 class="mb-4">
    <ChForm::Select @name="year"
                    @value={{@year}}
                    @options={{this.yearOptions}}
                    @onChange={{@onChange}}
                    @controlClass=""/>
    {{@title}}
  </h1>
{{/if}}

